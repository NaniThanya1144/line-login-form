<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8" />
  <title>Redirecting...</title>
  <script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
</head>
<body>
<script>
(async () => {

  // 1) Init LIFF
  await liff.init({ liffId: "1615041641-4lrETHl5" });

  if (!liff.isLoggedIn()) {
    liff.login();
    return;
  }

  // 2) Get user profile
  const profile = await liff.getProfile();
  const uid = profile.userId;

  // 3) Redirect to Google Form with prefilled UID
  const formURL =
    "https://docs.google.com/forms/d/e/1FAIpQLSc4FZwriwIUgkDKLCtCgH9RmTTP-KC2QbX6Ti7cGrIxb_qKwA/viewform?usp=pp_url"
    + "&entry.332472031=" + encodeURIComponent(uid);

  window.location.href = formURL;

})();
</script>
</body>
</html>

